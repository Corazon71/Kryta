{
  "name": "daimon-ai",
  "productName": "DAEMON",
  "private": true,
  "version": "3.0.0",
  "description": "Run in the Background. Execute in Reality. AI-Powered Productivity OS.",
  "author": {
    "name": "Gurunath Salve",
    "email": "gurunaths6102003@gmail.com"
  },
  "homepage": "https://github.com/corazon71/aitodo",
  "repository": {
    "type": "git",
    "url": "https://github.com/corazon71/aitodo.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron ../electron/main.js",
    "start": "concurrently \"npm run dev\" \"npm run electron\""
  },
  "dependencies": {
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.561.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0",
    "use-sound": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.7",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.4"
  },
  "main": "main.cjs",
  "build": {
    "appId": "com.aitodo.app",
    "productName": "Focus AI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.cjs"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/api",
        "to": "api",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/todo.db",
        "to": "api/todo.db"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}